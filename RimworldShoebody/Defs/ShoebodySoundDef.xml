<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <SoundDef>
    <defName>Shoebody_Sound</defName>
    <sustain>True</sustain>
    <context>MapOnly</context>
    <priorityMode>PrioritizeNearest</priorityMode>
    <maxSimultaneous>3</maxSimultaneous>
    <sustainFadeoutTime>3.0</sustainFadeoutTime>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>shoebody</clipPath>
          </li>
        </grains>
        <name>ShoebodySubSoundDef</name>
        <muteWhenPaused>true</muteWhenPaused>
        <distRange>15~30</distRange>
        <volumeRange>100</volumeRange>
        <randomStartPoint>false</randomStartPoint>
        <paramMappings>
          <li>
            <inParam Class="SoundParamSource_External">
              <inParamName>ShoebodySound_VolumeParam</inParamName>
              <defaultValue>0.35</defaultValue>
            </inParam>
            <outParam Class="SoundParamTarget_Volume"/>
            <paramUpdateMode>Constant</paramUpdateMode>
          </li>
        </paramMappings>
      </li>
    </subSounds>
  </SoundDef>
  
